base-font-size = 12px

html
    box-sizing border-box
    height 100%
    overflow hidden

*, *:before, *:after
    box-sizing inherit

#App
    margin 0
    padding 0
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    overflow hidden
    font-family: 'Noto Serif'

div
    height 100%
    width 100%
